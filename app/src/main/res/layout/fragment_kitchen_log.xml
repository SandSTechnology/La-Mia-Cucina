<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_gray"
    tools:context=".fragments.KitchenLogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="Kitchen Log" />

        <androidx.cardview.widget.CardView
            android:id="@+id/addIngredient"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:elevation="16dp"
            app:cardCornerRadius="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:orientation="vertical"
            app:cardBackgroundColor="#ffffff"
            app:cardElevation="4dp"
            app:cardPreventCornerOverlap="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_card1">
                <TextView
                    android:textAlignment="textStart"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Add ingredient"
                    android:layout_gravity="center"
                    tools:ignore="RtlCompat" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/viewIngredient"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:elevation="16dp"
            app:cardCornerRadius="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_card2">
                <TextView
                    android:textAlignment="textStart"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="View Kitchen Log"
                    android:layout_gravity="center"
                    tools:ignore="RtlCompat" />
            </LinearLayout>



        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/modifyIngredient"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:elevation="16dp"
            app:cardCornerRadius="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_card3">
                <TextView
                    android:textAlignment="textStart"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Modify Kitchen Log"
                    android:layout_gravity="center"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>